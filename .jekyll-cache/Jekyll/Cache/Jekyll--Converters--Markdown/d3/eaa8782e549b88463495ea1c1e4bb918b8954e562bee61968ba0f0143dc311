      <script>
        function readMore1() {
          var moreText = document.getElementById("more1");
          var lessText = document.getElementById("less1");
          var linkText = document.getElementById("readMoreLink1");

          if (linkText.innerHTML === "Read more...") {
            linkText.innerHTML = "Read less...";
            moreText.style.display = "block";
            lessText.style.display = "none";
          } else {
            linkText.innerHTML = "Read more...";
            moreText.style.display = "none";
            lessText.style.display = "block";
          }
        }
      </script>

    

